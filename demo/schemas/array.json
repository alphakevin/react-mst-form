{
    "title": "Test Form",
    "schema": {
        "type": "object",
        "title": "Comment",
        "required": ["comments"],
        "properties": {
            "comments": {
                "type": "array",
                "maxItems": 2,
                "items": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "title": "Name",
                            "type": "string"
                        },
                        "email": {
                            "title": "Email",
                            "type": "string",
                            "format": "email",
                            "description": "Email will be used for evil."
                        },
                        "spam": {
                            "title": "Spam",
                            "type": "boolean",
                            "default": true
                        },
                        "comment": {
                            "title": "Comment",
                            "type": "string",
                            "maxLength": 20,
                            "validationMessage": "Don't be greedy!"
                        }
                    },
                    "required": ["name", "comment"]
                }
            }
        }
    }
}
