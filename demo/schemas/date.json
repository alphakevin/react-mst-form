{
    "title": "Test Form",
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Task name",
                "type": "string",
                "minLength": 2
            },
            "description": {
                "title": "Description",
                "type": "string",
                "component": "textarea"
            },
            "dueTo": {
                "title": "Due to",
                "type": "string",
                "component": "datetime",
                "format": "date-time"
            }
        },
        "required": ["name"]
    }
}
